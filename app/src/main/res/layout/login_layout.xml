<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"

    android:background="@color/greyBackground"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/banner_rectangle"
        android:layout_height="0dp"
        android:layout_weight="0.4">

        <TextView
            android:id="@+id/textAppTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="DS Fitness"
            android:textSize="50sp"
            android:textColor="@color/colorTitleText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6">
    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rectangle"
        android:orientation="vertical"
        android:padding="10dp">
        <!-- android:layout_width="wrap_content"-->
        <!---android:layout_height="wrap_content"-->

        <LinearLayout
            android:id="@+id/loginWidgetsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/textUsernameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textView_enter_username" />

            <EditText
                android:id="@+id/username_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/editText_enter_username"
                android:inputType="text"
                android:padding="5dp" />

            <TextView
                android:id="@+id/textPasswordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textView_enter_password" />


            <EditText
                android:id="@+id/password_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:padding="5dp" />

            <TextView
                android:id="@+id/login_failed_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login failed. Please check your username and password are correct."
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/linearlayout_buttons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/button_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:text="@string/btn_login_text" />

                <Button
                    android:id="@+id/button_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:text="@string/btn_sign_up_text" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/signUpWidgetsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/textNewUsernameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textView_enter_username" />

            <EditText
                android:id="@+id/newUsername_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/editText_enter_username"
                android:inputType="text"
                android:padding="5dp" />

            <TextView
                android:id="@+id/username_invalid_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Error"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textEmailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter_an_email_address" />

            <EditText
                android:id="@+id/email_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/editText_enter_username"
                android:inputType="text"
                android:padding="5dp" />

            <TextView
                android:id="@+id/email_invalid_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Error"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textNewPasswordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textView_enter_password" />


            <EditText
                android:id="@+id/newPassword_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:padding="5dp" />

            <TextView
                android:id="@+id/new_password_invalid_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Error"
                android:visibility="gone" />

            <TextView
                android:id="@+id/new_confirm_password_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm password" />

            <EditText
                android:id="@+id/newConfirmPassword_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:padding="5dp" />

            <TextView
                android:id="@+id/new_confirm_password_invalid_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Error"
                android:visibility="gone" />

            <TextView
                android:id="@+id/signUp_failed_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Given information is invalid. Please correct the indicated fields to continue."
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/linearlayout_signUp_Action_buttons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/button_cancel_signUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/button_confirm_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:text="Finish" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/banner_rectangle"
        android:layout_height="0dp"
        android:layout_weight="0.4">

    </LinearLayout>

</LinearLayout>